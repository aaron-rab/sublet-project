generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  user_id      Int
  description  String
  rent         Int
  creationDate DateTime @default(now())
  endDate      DateTime
  startDate    DateTime
  User         User     @relation(fields: [user_id], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique 
  email    String @unique
  password String
  creationDate DateTime @default(now())
}
